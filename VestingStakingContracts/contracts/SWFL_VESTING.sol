// ----------------------------------------------------------------------------
// Owned contract
// ----------------------------------------------------------------------------
contract Owned {
    address payable public owner;

    event OwnershipTransferred(address indexed _from, address indexed _to);

    constructor() public {
        owner = msg.sender;
    }

    modifier onlyOwner {
        require(msg.sender == owner);
        _;
    }

    function transferOwnership(address payable _newOwner) public onlyOwner {
        owner = _newOwner;
        emit OwnershipTransferred(msg.sender, _newOwner);
    }
}

// ----------------------------------------------------------------------------
// ERC Token Standard #20 Interface
// ----------------------------------------------------------------------------
interface IERC20 {
    function totalSupply() external view returns (uint256);
    function balanceOf(address tokenOwner) external view returns (uint256 balance);
    function allowance(address tokenOwner, address spender) external view returns (uint256 remaining);
    function transfer(address to, uint256 tokens) external returns (bool success);
    function approve(address spender, uint256 tokens) external returns (bool success);
    function transferFrom(address from, address to, uint256 tokens) external returns (bool success);

    event Transfer(address indexed from, address indexed to, uint256 tokens);
    event Approval(address indexed tokenOwner, address indexed spender, uint256 tokens);
}

contract Vesting is Owned{
    using SafeMath for uint256;
    
    address SWFL;
    uint256 public lockingPeriod = 365 days;
    uint256 public lockedTokens;
    uint256 public lockedDate;
    uint256 public claimedTokens;
    
    uint256 private cliff = 15 days;
    
    mapping(address => bool) whitelist;
    
    event AccountWhitelisted(address account);
    event VestingStarted(uint256 tokens);
    event TokensClaimed(uint256 tokens, address by);
    
    modifier isAllowed(address _account){
        require(whitelist[_account] == true || _account == owner, "FAIL: Unauthorized");
        _;
    }
    
    constructor(address _SWFL) public{
        SWFL = _SWFL;
    }
    
    function LOCK(uint256 _tokens) public onlyOwner{
        // require no more locking
        require(IERC20(SWFL).balanceOf(address(this)) == 0, "FAIL: Already running lock");
        // transfer tokens to contract from owner
        IERC20(SWFL).transferFrom(msg.sender, address(this), _tokens);
        
        // update stats
        lockedTokens = _tokens;
        lockedDate = block.timestamp;
        
        emit VestingStarted(_tokens);
    }
    
    function addToWhitelist(address _account) public onlyOwner{
        whitelist[_account] = true;
        emit AccountWhitelisted(_account);
    }
    
    function CLAIM() public isAllowed(msg.sender){
        // check, if any token is ready to be released
        require(pendingRelease() > 0, "FAIL: Nothing pending to release");
        // send tokens from contract to caller
        IERC20(SWFL).transfer(msg.sender, pendingRelease());
        
        emit TokensClaimed(pendingRelease(), msg.sender);
        
        // update claim date
        claimedTokens += pendingRelease();
    }
    
    function pendingRelease() public view returns(uint256 _pendingRelease){
        if(block.timestamp > lockedDate.add(cliff)){
            uint256 totalTime = block.timestamp.sub(lockedDate.add(cliff));
            totalTime = totalTime.div(1 days); // time in days
            
            if(totalTime > lockingPeriod)
                totalTime = lockingPeriod;
            
            uint256 perDay = lockedTokens.div(lockingPeriod);
            uint256 release = (totalTime.mul(perDay)).sub(claimedTokens);
            
            if(release == 0 && block.timestamp > lockedDate.add(lockingPeriod))
                release = IERC20(SWFL).balanceOf(address(this));
            
            return release;
        }
        else return 0;
    }
}